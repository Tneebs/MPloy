<!DOCTYPE html>
<html>
  <head>
  <style>
  body {
     background-image: url("assets/employee_login.jpg");
     background-repeat: no-repeat;
     background-size: 100%;
  } 
</style>
<h1><img src="assets/Login" alt="login" style="max-width:15%;"></h1>
</head>

  <body>
  <div class="errors">
    <% if flash[:error] %>
        <h4 style="color: red;">
          Alert: <%= flash[:error] %>
        </h4>
    <% end %>
  </div>
    <% if flash[:success] %>
        <h4 style="color: green;">
          <%= flash[:success] %> Please Login!
        </h4>
    <% end %>

    <div class="card shadow p-3 mb-5 bg-white rounded" style="width: 18rem;">
        <div class="card-body">
        <h5 class="card-title">Please login</h5>

            <%= form_with url: '/login', method: :post do |f| %>

                <%= f.label :username %>
                <%= f.text_field :"login[username]" %>

                <%= f.label :password %>
                <%= f.password_field :"login[password]" %>

                <%= f.label :passcode %>
                <%= f.password_field :"login[passcode]" %><br>
              <br>
                <%= f.submit "Login", {:class => "btn btn-primary btn-lg" }  %>
             
              <% end %>
            </div>
          </div>
    </body>
  </html>